doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{__('TITLE', community)}
    link(href="styles/normalize.css", rel="stylesheet", type="text/css")
    link(href="styles/style.css", rel="stylesheet", type="text/css")
    link(href="//fonts.googleapis.com/css?family=Lato:300,400,700,900,700italic|Open+Sans:700italic,400,600,300,700,800", rel="stylesheet", type="text/css")
  body
    #wrapper
      .main

        .header
          h1 
            .small SF/Bay Area
            | Interns 2018
        form(method="POST", action="/invite")#join-form.form
          label(for="name") #{__('ENTER_NAME')}
          input(type="text", name="name", placeholder="Will Smith")#slack-name.field
          label(for="name") #{__('ENTER_EMAIL')}
          input(type="email", name="email", placeholder="you@example.com")#slack-email.field
          label(for="name") #{__('ENTER_COMPANY')}
          input(type="text", name="company", placeholder="Google")#slack-company.field
          label(for="name") #{__('ENTER_SCHOOL')}
          input(type="text", name="school", placeholder="Harvard")#slack-school.field
          input(type="submit", value="Join the Community â†’").submit
    script.
      var tokenRequired = #{tokenRequired};
      var form = document.getElementById('join-form');
      var email = document.getElementById('slack-email');
      var token = document.getElementById('slack-token');
      form.addEventListener('submit', function(evt) {
        if (!email.value) {
          evt.preventDefault();
        }
        if (tokenRequired && !token.value) {
          evt.preventDefault();
        }
      });
